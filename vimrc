syntax on
set number
filetype plugin indent on
set tabstop=4
set shiftwidth=4 
set expandtab
set autoindent
set hlsearch
set incsearch
set ignorecase
set smartcase
set mouse=a
set directory^=$HOME/.vim//
let g:netrw_banner = 0
let g:netrw_liststyle = 3
set bg=dark
hi Comment ctermfg=blue
hi Search ctermbg=red
