syntax on
set number
set relativenumber
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set hlsearch
set incsearch
set path+=**
set mouse=nv
set laststatus=2
set clipboard=unnamedplus
set bg=dark
hi Comment ctermfg=blue
hi Search ctermbg=red
hi IncSearch ctermfg=red
let mapleader=" "
nnoremap <leader>n :set rnu!<CR>
nnoremap <leader><space> :noh<CR>
