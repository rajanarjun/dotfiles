syntax on
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set hlsearch
set incsearch
set path+=**
set mouse=nv
let mapleader=" "
nnoremap <leader>1 :set nu!<CR>
nnoremap <leader><space> :noh<CR>
set bg=dark
hi Comment ctermfg=blue
hi Search ctermbg=red
hi IncSearch ctermfg=red
