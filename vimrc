set shiftwidth=4
set expandtab
set autoindent
set hlsearch
set incsearch
set scrolloff=3
let mapleader=" "
nnoremap <leader>n :bn<CR>
nnoremap <leader>p :bp<CR>
nnoremap <leader>y "+y
vnoremap <leader>y "+y
set bg=dark
hi Comment ctermfg=blue
