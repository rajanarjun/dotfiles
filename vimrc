syntax on
set number
filetype indent on
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set hlsearch
set incsearch
set smartcase
set ignorecase
set mouse=nv
set bg=dark
colorscheme desert
hi Visual ctermfg=15 ctermbg=8
hi EndOfBuffer ctermfg=81 ctermbg=236
inoremap {<CR> {<CR>}<ESC>O
nnoremap <space><space> :noh<CR>
