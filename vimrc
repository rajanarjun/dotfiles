syntax on
set number
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set hlsearch
set incsearch
set path+=**
set mouse=nv
set bg=dark
hi Comment ctermfg=blue
hi Search ctermbg=red
hi IncSearch ctermfg=red
let mapleader=" "
nnoremap <leader><space> :noh<CR>
nnoremap <leader>y "+yy<CR>
vnoremap <leader>y "+y<CR>
nnoremap <leader>p "+p<CR>
