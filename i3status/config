general {
    output_format = "i3bar"
    colors = true
}

order += "cpu_usage"
order += "disk /"
order += "battery all"
order += "wireless wlo1"
order += "ethernet eno1"
order += "tztime local"

cpu_usage {
    format = "CPU: %usage"
}

disk "/" {
    format = "Disk: %free"
}

wireless wlo1 {
    format_up = "WiFi: %essid %quality"
    format_down = "WiFi: down"
}

ethernet eno1 {
    format_up = "LAN: up"
    format_down = "LAN: down"
}

battery all {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}
